<div class="card">
    <div class="card-header bg-dark">
        <h3 class="card-title text-white"upload Image>
            <i class="far fa-image"></i> 
        </h3>
    </div>
    <div class="card-body">
        <form action="/images" method="POST" enctype="multipart/form-data">
            <div class="form-group">
                <div class="input-group">
                    <div class="custom-file">
                        <input type="file" name="image" class="custom-file-input" id="inputGroup" aria-describedby="inputGroupFileAddon" required>
                        <label for="inputGroup" class="custom-file-label">Choose image</label>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <input type="text" name="title" class="form-control" placeholder="Title image" required>
            </div>
            <div class="form-group">
                <textarea name="description" class="form-control" rows="3" placeholder="Description" required></textarea>
            </div>
            <div class="form-group">
                <button class="btn btn-success"><i class="fa fa-upload"></i> Upload Image</button>
            </div>
        </form>
    </div>
</div>